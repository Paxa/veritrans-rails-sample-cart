%article[product]
  %figure= image_tag("item.png")
  %span= product.name
  .price= number_to_currency(product.price)

  = form_for @cart do |f|
    = f.hidden_field :product_id, value: product.id
    = f.select :quantity, options_for_select(0..10), :include_blank => "quantity"
    = f.submit 'Add to cart', id: 'add_to_cart'