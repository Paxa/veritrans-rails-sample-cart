%article[product]
  %figure= image_tag("item.png")
  %span= product.name
  .price= number_to_currency(product.price)

  = form_for @cart do |f|
    = f.hidden_field :product_id, value: product.id
    %p
      = f.label :quantity
      = f.select :quantity, options_for_select(1..10)
    %p
      = f.submit 'Add to cart', id: 'add_to_cart'