<% title "Products" %>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>
      
  <% for product in @products %>
    <tr>
      <%= form_for @cart do |f| %>      
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <%= f.hidden_field :product_id, value: product.id %>
        <td><%= f.text_field :quantity %>        
        <td><%= f.submit 'Add to cart', id: 'add_to_cart' %></td>    
      <% end %>
    </tr>
  <% end %>  
</table>